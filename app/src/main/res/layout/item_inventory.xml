<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="7dp"
    android:padding="10dp">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/remove_inventory_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_black_24dp"
            android:background="@color/greyDarkerShade"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/inventory_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icons8_trash_can_48px" />

        <TextView
            android:id="@+id/mystore_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Book"
            android:textSize="14sp"
            android:textColor="@color/textColorBlack"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/inventory_imageview"
            android:layout_toStartOf="@id/tv_bottom_container"/>

        <LinearLayout
            android:id="@+id/tv_bottom_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@id/inventory_quantity_container"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorBlack"
                android:text="Price: Rs. "
                android:textSize="12sp"/>

            <LinearLayout
                android:id="@+id/inventory_price_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/mystore_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/previousGreen"
                    android:text="42"
                    android:textSize="16sp"/>
                <ImageButton
                    android:id="@+id/edit_quantity_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_white_24dp"
                    android:background="@null"
                    android:layout_margin="2dp"
                    android:padding="7dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inventory_quantity_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tv_in_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorBlack"
                android:text="Units "
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:id="@+id/edit_qty_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/subtract_quantity_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_black_20dp"
                    android:background="@drawable/left_half_btn"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/mystore_item_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:digits="0123456789."
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:imeOptions="actionDone"
                    android:hint="24"/>

                <ImageButton
                    android:id="@+id/add_quantity_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_white_20dp"
                    android:background="@drawable/right_half_btn"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>