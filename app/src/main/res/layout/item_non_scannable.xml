<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="16dp"
    android:elevation="5dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/visible_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="sample text"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toStartOf="@id/container_weight"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/textColorBlack"
                    android:text="Rs. " />

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/textColorBlack"
                    android:text="20"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center"
                android:layout_toStartOf="@+id/check_box"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/textColorBlack"
                    android:text="for"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/item_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/textColorBlack"
                    android:text="1 "/>

                <TextView
                    android:id="@+id/item_weight_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Kg"
                    android:textColor="@color/textColorBlack"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/tv_container_weight_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/visible_layout"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="100g"
                    android:minWidth="40dp"
                    android:minHeight="20dp"
                    android:background="@drawable/thin_border"
                    android:textColor="@color/greyLighterShade"/>

                <Button
                    android:id="@+id/button_250"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="250g"
                    android:minWidth="40dp"
                    android:minHeight="20dp"
                    android:background="@drawable/thin_border"
                    android:textColor="@color/greyLighterShade"/>

                <Button
                    android:id="@+id/button_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="500g"
                    android:minWidth="40dp"
                    android:minHeight="20dp"
                    android:background="@drawable/thin_border"
                    android:textColor="@color/greyLighterShade"/>

                <Button
                    android:id="@+id/button_750"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="750g"
                    android:minWidth="40dp"
                    android:minHeight="20dp"
                    android:background="@drawable/thin_border"
                    android:textColor="@color/greyLighterShade"/>

                <EditText
                    android:visibility="gone"
                    android:id="@+id/edit_weight"
                    android:layout_marginStart="10dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"/>

                <Spinner
                    android:visibility="gone"
                    android:id="@+id/spinner_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
