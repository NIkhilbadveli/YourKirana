<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/chartBackground"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Choose one from below"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:ignore="RtlHardcoded"
        android:layout_margin="10dp"
        android:textColor="@color/previousGreen"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">
        <Button
            android:id="@+id/btn_choice_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorWhite"
            android:padding="10dp"
            android:text="How to do Inventory"
            android:background="@drawable/thin_border"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/btn_choice_billing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorWhite"
            android:padding="10dp"
            android:text="How to do Billing"
            android:background="@drawable/thin_border"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>